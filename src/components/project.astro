---
import type { CollectionEntry } from "astro:content";
import Card from "./card.astro";

interface Props {
  project: CollectionEntry<"projects">;
}

const {
  project: {
    data: { description, tags, title, link, source },
  },
} = Astro.props;
---

<a title={title} href={source}>
  <Card>
    <h2 class="text-white text-3xl mb-5">{title}</h2>
    <p class="mb-5 text-gray-300">{description}</p>
    <div class="mb-5 flex gap-1">
      {
        tags.map((tag) => (
          <>
            <span class="inline-block rounded px-2 py-1 mt-1 bg-sky-800 text-sky-200">
              {tag}
            </span>{" "}
          </>
        ))
      }
    </div>
    <div class="mt-5">
      {
        link && (
          <a
            title={`${title} demo`}
            class="transition rounded hover:bg-blue-500 bg-blue-800 mr-2 px-2 py-1"
            href={link}
          >
            Demo
          </a>
        )
      }
    </div>
  </Card></a
>
