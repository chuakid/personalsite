---
import type { CollectionEntry } from "astro:content";
import Card from "./card.astro";
import { Image } from "astro:assets";
import externalLinkSvg from "../images/external-link.svg";

interface Props {
  project: CollectionEntry<"projects">;
}

const {
  project: {
    data: { description, tags, title, link, source },
  },
} = Astro.props;
---

<a title={title} href={source} aria-label={title}>
  <Card>
    <header class="flex gap-2">
      <h2 class="text-white text-xl">
        {title}
      </h2>
      <Image src={externalLinkSvg} alt="external link" />
    </header>
    <p class="text-gray-300">{description}</p>
    <div class="mt-1 flex gap-1">
      {
        tags.map((tag) => (
          <>
            <span class="inline-block rounded px-2 py-1 mt-1 bg-sky-800 text-sky-200">
              {tag}
            </span>{" "}
          </>
        ))
      }
    </div>
  </Card></a
>
